<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="4dp"
    app:cardElevation="8dp"
    android:id="@+id/booking_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/booking_image"
                android:layout_width="119dp"
                android:layout_height="114dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/booking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/booking_image"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/booking_image"
                android:layout_below="@+id/booking_title"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_more_options_horizontal"
                android:id="@+id/more_options_button"

                android:layout_below="@id/booking_image"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


