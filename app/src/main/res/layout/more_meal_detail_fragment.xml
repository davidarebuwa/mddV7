<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/meal_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"
        />

    <ImageView
        android:id="@+id/meal_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/meal_cv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/meal_name"
        android:src="@drawable/ic_meal"/>



    <TextView
        android:id="@+id/meal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/meal_cv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnMapSwitch"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/meal_cv"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_public_black_24dp"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/edit_meal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="18dp"
        android:layout_below="@id/btnMapSwitch"
        android:background="@drawable/ic_edit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"

        />


    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/meal_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/meal_rating"
        android:src="@drawable/ic_rating"/>

    <TextView
        android:id="@+id/meal_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meal_name"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/price_level_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rating_icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/meal_rating"
        android:src="@drawable/ic_price"/>

    <TextView
        android:id="@+id/meal_price_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_rating"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/restaurant_address_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/price_level_icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/meal_comment"
        android:src="@drawable/ic_comment"/>

    <TextView
        android:id="@+id/meal_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meal_price_level"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />









</RelativeLayout>