<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/resImage_cv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp"
        />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resImage_cv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnMapSwitch"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_below="@id/resImage_cv"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_public_black_24dp"
        android:layout_alignParentEnd="true"
        />


    <ImageView
        android:id="@+id/rating_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/restaurant_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/restaurant_rating"
        android:src="@drawable/ic_rating"/>

    <TextView
        android:id="@+id/restaurant_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_name"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/price_level_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/restaurant_rating"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/restaurant_rating"
        android:src="@drawable/ic_price"/>

    <TextView
        android:id="@+id/restaurant_price_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_rating"
        android:layout_marginTop="18dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/restaurant_address_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/price_level_icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/restaurant_address"
        android:src="@drawable/ic_address"/>

    <TextView
        android:id="@+id/restaurant_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_price_level"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/restaurant_phoneNumber_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/restaurant_address_icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-22dp"
        android:layout_toStartOf="@id/restaurant_address"
        android:src="@drawable/ic_call"/>

    <TextView
        android:id="@+id/restaurant_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_address"
        android:layout_marginTop="23dp"
        android:layout_marginStart="40dp"
        android:textSize="18sp"
        android:textColor="@color/light_blue"
        />




<Button
    android:id="@+id/add_booking_button"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_alignParentBottom="true"
    android:elevation="8dp"
    android:text="@string/add_booking_button"
    android:background="@color/colorPrimary"
    android:textColor="@color/colorWhite"
    />


</RelativeLayout>